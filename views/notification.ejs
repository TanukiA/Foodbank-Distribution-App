<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/notification.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://kit.fontawesome.com/20ddbdf3e1.js" crossorigin="anonymous"></script>
    <script type="text/javascript" src="js/userlist.js"></script>
    <title>Notification</title>
</head>

<body>
    <%- include ("header") %>
        <h1 id="title">Notification</h1>
        <hr id="hr-out">

        <div id="notification-box">
            <% for(var i = 0; i < set1.length; i++){ %>
                <% for(var j=0; j < set4.length; j++){ %>

                    <div id="notification">
                        <p class="noti-date-time">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bell" viewBox="0 0 16 16">
                          <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zM8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5.002 5.002 0 0 1 13 6c0 .88.32 4.2 1.22 6z"/>
                        </svg>
                            <%=date[i]%> &nbsp
                                <%=time[i]%>
                        </p>
                        <br>
                        <p class="noti-content">Hi
                            <%=set4[j].user_name%>, </p>
                        <p class="noti-content">
                            <%=set1[i].notification_message%>
                        </p>
                    </div>

                    <% } %>
                        <% } %>
        </div>
        <%- include ("footer") %>

        <script>
            //fix header
            document.getElementById("logo-font").style.color = "#627964";
            document.getElementById("logo-font").style.fontFamily = "Montserrat,sans-serif";
            document.getElementById("logo-font").style.fontSize = "145%";
            document.getElementById("logo-font").style.fontWeight = "700";

            //fix footer
            document.getElementById("footerH2").style.color = "#FFFFFF";
            document.getElementById("footerH2").style.fontSize = "20px";
            document.getElementById("footerH2").style.fontSize = "145%";
            document.getElementById("footerH2").style.fontWeight = "700";

            for (var x = 1; x < 4; x++) {
                document.getElementById("footerH3-"+x).style.color = "#FFFFFF";
                document.getElementById("footerH3-"+x).style.fontSize = "120%";
                document.getElementById("footerH3-"+x).style.fontWeight = "700";
            }

            for (var x = 1; x < 10; x++) {
                document.getElementById("footerP"+x).style.lineHeight = "0.5";
            }
        </script>
</body>

</html>